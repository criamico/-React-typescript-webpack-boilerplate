{
  "name": "React-typescript-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate to configure basic react typescript project with webpack.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "./node_modules/webpack/bin/webpack.js -p  --config webpack_prod.config.js --progress --profile --colors",
    "clean-build": "npm run clean && ./node_modules/webpack/bin/webpack.js -p  --config webpack_prod.config.js",
    "dev": "./node_modules/webpack-dev-server/bin/webpack-dev-server.js --progress --watch --hot --colors --inline",
    "test": "karma start --auto-watch",
    "test-ci": "karma start --singleRun --browsers ChromeHeadless --colors false",
    "lint": "esw webpack.config.* src tools --color",
    "http-server": "http-server dist -p 8000"
  },
  "author": "criamico",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/jasmine": "^2.8.9",
    "@types/react": "^16.4.16",
    "@types/react-dom": "^16.0.9",
    "autoprefixer": "^9.1.3",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "0.11.1",
    "istanbul": "^0.4.5",
    "jasmine": "^3.2.0",
    "jasmine-enzyme": "^6.0.4",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^1.3.1",
    "karma-typescript": "^3.0.13",
    "karma-typescript-es6-transform": "^1.0.4",
    "karma-typescript-preprocessor": "^0.4.0",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "npm-check": "^5.8.0",
    "null-loader": "^0.1.1",
    "postcss-loader": "^3.0.0",
    "postcss-scss": "^2.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.21.0",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "tslint-react": "^3.6.0",
    "tslint-webpack-plugin": "^1.2.2",
    "typescript": "^3.1.3",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.17.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.7"
  }
}
